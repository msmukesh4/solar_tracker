<h1>Editing Device</h1>

<div class="right_col" role="main">
    <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
					<h2> Device Updation </h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                	<%= form_for(:device, :url => {:action => 'update', :id => @device.id}, method: :put ) do |f| %>

						<% @action = "edit" %>
						
					    
					    <div class="row">
					    	<%= render(:partial => "form", :locals => {:f => f}) %>
					    	<div class="col-sm-8 col-sm-offset-2">
							    <br/>
							    <%= submit_tag("Submit", :class => "btn-primary btn") %>
							    <%= link_to 'Back', devices_path %>
							</div>
						</div>
						<br/><br/>
					<% end %>
                	
                </div>
            </div>
        </div>
    </div>
</div>

<%= link_to 'Show', @device %>
