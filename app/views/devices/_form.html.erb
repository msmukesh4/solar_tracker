<form class="form-horizontal form-label-left">
    <div class="form-group">
        <label class="control-label col-md-2 col-sm-2 col-xs-12">Device name</label>
        <div class="col-md-10 col-sm-10 col-xs-12">
            <%= f.text_field(:name, :class => "form-control")%>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2 col-sm-2 col-xs-12">Model</label>
        <div class="col-md-10 col-sm-10 col-xs-12">
            <%= f.text_field(:model, :class => "form-control")%>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2 col-sm-2 col-xs-12">Place</label>
        <div class="col-md-10 col-sm-10 col-xs-12">
            <%= f.text_field(:place, :class => "form-control")%>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2 col-sm-2 col-xs-12">Device ID</label>
        <div class="col-sm-10 col-xs-12">
            <%= f.text_field(:device_id, :class => "form-control")%>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 col-sm-2 col-xs-12">Latitude</label>
        <div class="col-sm-10 col-xs-12">
            <%= f.text_field(:latitude, :class => "form-control")%> 
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2 col-sm-2 col-xs-12">Longitude</label>
        <div class="col-sm-10 col-xs-12">
            <%= f.text_field(:longitude, :class => "form-control")%>    
        </div>
    </div>
</form>