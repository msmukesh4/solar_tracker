                    	</div>
                    	<div class="col-md-10 col-sm-9 col-xs-12" style="background:#1da7e0; color:#000000">
							<h2> : <%= @device.name %></h2>
                    	</div>
                    
                    	<div class="col-md-2 col-sm-3 col-xs-12" style="background:#1da7e0; color:#000000">
                    		<h2>Device ID  </h2>
                    	</div>
                    	<div class="col-md-10 col-sm-9 col-xs-12" style="background:#1da7e0; color:#000000">
							<h2> : <%= @device.device_id %></h2>
                    	</div>
                    
                    	<div class="col-md-2 col-sm-3 col-xs-12" style="background:#1da7e0; color:#000000">
                    		<h2>Device Model  </h2>
                    	</div>
                    	<div class="col-md-10 col-sm-9 col-xs-12" style="background:#1da7e0; color:#000000">
							<h2> : <%= @device.model %></h2>
                    	</div>
                    
                    	<div class="col-md-2 col-sm-3 col-xs-12" style="background:#1da7e0; color:#000000">
                    		<h2>Device Place  </h2>
                    	</div>
                    	<div class="col-md-10 col-sm-9 col-xs-12" style="background:#1da7e0; color:#000000">
							<h2> : <%= @device.place %></h2>
                    	</div>
                    

                    	<div class="col-md-2 col-sm-3 col-xs-12" style="background:#1da7e0; color:#000000">
                    		<h2> Status </h2>
                    	</div>
                    	<div class="col-md-10 col-sm-9 col-xs-12" style="background:#1da7e0; color:#000000">
							<h2> : <%= @device.status %></h2>
                    	</div>

                    	<div class="col-md-2 col-sm-3 col-xs-12" style="background:#1da7e0; color:#000000">
                    		<h2> Latitude </h2>
                    	</div>
                    	<div class="col-md-10 col-sm-9 col-xs-12" style="background:#1da7e0; color:#000000">
							<h2> : <%= @device.latitude %></h2>
                    	</div>

                    	<div class="col-md-2 col-sm-3 col-xs-12" style="color:#000000">
                    		<h2> Longitude </h2>
                    	</div>
                    	<div class="col-md-10 col-sm-9 col-xs-12" style="color:#000000">
							<h2> : <%= @device.longitude %></h2>
                    	</div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

