<!DOCTYPE html>
<html>
  <head>
    <title>SolarTracker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>    
  </head>

  <body>
    <p id="notice"><%= notice %></p>
  	<% if user_signed_in? %>
  		<%= link_to "Logout", destroy_user_session_path, method: :delete, class: "page-scroll btn-danger btn" %>
      <br/>
      <br/><br/>
    <% end %>
    <%= yield %>

    <%= yield :javascript %>
  </body>
</html>
